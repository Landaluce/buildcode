<%= form_with(model: appointment) do |form| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :starts_at %>
    <%= form.datetime_select :starts_at, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :ends_at %>
    <%= form.datetime_select :ends_at, class:"form-control" %>
  </div>

  <div class="field form-group">
    <% form.label :patient_id %>
    <%= form.number_field :patient_id, class:"form-control", placeholder:"patient id" %>
  </div>

  <div class="field form-group">
    <% form.label :doctor_id %>
    <%= form.number_field :doctor_id, id: :doctor_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
